{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}
    <h1>Produto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary mt-5" href="{{ path('app_product_index') }}">back to list</a>
        <a class="btn btn-secondary mt-5" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
    </div>

    <!-- {{ include('product/_delete_form.html.twig') }} -->
{% endblock %}
